<Page x:Class="Part_3.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Part_3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="950"
      Background="#34495E"
      Title="Cybersecurity Awareness Assistant">

    <Grid Background="#34495E" Margin="0">
        <Border Background="#2C3E50"
                CornerRadius="15"
                Padding="20"
                Margin="20"
                BorderBrush="#1ABC9C"
                BorderThickness="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chat Output -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                    <TextBlock x:Name="ChatOutput" 
                               TextWrapping="Wrap" 
                               Foreground="White"
                               FontSize="14"
                               FontFamily="Segoe UI"
                               Padding="10" />
                </ScrollViewer>

                <!-- Input Area -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <TextBox x:Name="UserInput"
                             Width="500"
                             FontSize="14"
                             Margin="0,0,10,0"
                             Height="40"
                             Background="#34495E"
                             Foreground="White"
                             BorderBrush="#1ABC9C"
                             BorderThickness="1"
                             Padding="5"
                             FontFamily="Segoe UI"/>

                    <Button Content="Send"
                            Width="100"
                            Height="40"
                            Click="SendButton_Click"
                            Background="#1ABC9C"
                            Foreground="White"
                            FontWeight="Bold"
                            FontFamily="Segoe UI"
                            Cursor="Hand"
                            BorderThickness="0"
                            Padding="5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
